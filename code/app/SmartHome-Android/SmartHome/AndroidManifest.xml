<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fuego.smarthome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="cn.fuego.smart.home.ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.fuego.smart.home.ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.fuego.smart.home.ui.MainTabbarActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.fuego.smart.home.ui.setting.ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name="cn.fuego.smart.home.ui.setting.ServiceApplyActivity"
            android:label="@string/title_activity_service_apply" >
        </activity>
    </application>

</manifest>
