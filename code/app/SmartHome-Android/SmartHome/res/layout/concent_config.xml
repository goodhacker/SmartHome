<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@color/themecolor"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/title_0002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="集中器配置"
                android:textColor="@color/white"
                android:textSize="@dimen/head_font_size_sm" />

            <Button
                android:id="@+id/concent_config_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/add_apply"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/back"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/content_font_size" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:paddingRight="20dp"
                        android:text="ID："
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                    <TextView
                        android:id="@+id/concent_config_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:paddingRight="20dp"
                        android:text="00001"
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/concnet_config_list_chk"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:layout_marginBottom="1dp"
                        android:background="@color/white"
                        android:button="@null"
                        android:drawableRight="@drawable/dropdown_sel"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="终端列表"
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                    <ListView
                        android:id="@+id/concent_config_termin_list"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:divider="@color/backcolor"
                        android:dividerHeight="1dp"
                        android:visibility="gone" >

                    </ListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/txt_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:height="40dp"
                        android:paddingRight="20dp"
                        android:text="集中器名称："
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                    <EditText
                        android:id="@+id/concent_config_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_sel"
                        android:ems="10"
                        android:hint="例如：住宅集中器"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/content_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:height="40dp"
                        android:paddingRight="20dp"
                        android:text="集中器描述："
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                    <EditText
                        android:id="@+id/concent_config_desp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_sel"
                        android:ems="10"
                        android:gravity="center_vertical|top"
                        android:hint="例如：安装在客厅电视柜二层"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/content_font_size" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp" >

                <Button
                    android:id="@+id/concent_config_sure_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/common_btn"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="修  改"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_font_size" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
