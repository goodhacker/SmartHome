<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/themecolor"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/modify_pwd_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:drawableLeft="@drawable/back"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="返回"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="30dp"
        android:paddingTop="20dp" >

        <EditText
            android:id="@+id/txt_oldPwd"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/edittext_sel"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/old_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_oldPwd"
            android:layout_alignBottom="@+id/txt_oldPwd"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="原始密码"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txt_newPwd1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txt_oldPwd"
            android:layout_below="@+id/txt_oldPwd"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_sel"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txt_newPwd2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txt_newPwd1"
            android:layout_below="@+id/txt_newPwd1"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_sel"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_newPwd1"
            android:layout_alignBottom="@+id/txt_newPwd1"
            android:layout_alignRight="@+id/old_pwd"
            android:text="新  密 码"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_newPwd2"
            android:layout_alignBottom="@+id/txt_newPwd2"
            android:layout_alignLeft="@+id/textView1"
            android:text="确认密码"
            android:textColor="@color/black" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/modify_pwd_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav"
            android:text="确认修改"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
