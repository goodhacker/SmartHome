<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backcolor"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            style="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RadioButton02"
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/backcolor"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/radio_btn"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="正常"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/RadioButton01"
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/backcolor"
                android:button="@null"
                android:drawableLeft="@drawable/radio_btn"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="异常"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio0"
                style="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@color/backcolor"
                android:button="@null"
                android:drawableLeft="@drawable/radio_btn"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="未设置"
                android:textColor="@color/black" />

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_sel" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入异常状况描述信息"
                android:padding="10dp" />

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp" >

                <Button
                    android:id="@+id/button1"
                    style="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_green"
                    android:text="上传图片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_font_size_sm" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/themecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp" >

                <Button
                    android:id="@+id/pop_window_sure_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/common_btn"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="确  定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/content_font_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp" >

                <Button
                    android:id="@+id/pop_window_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/graybtn_secetor"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="取  消"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_font_size" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>