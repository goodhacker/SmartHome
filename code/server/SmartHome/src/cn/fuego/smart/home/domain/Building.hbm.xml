<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
	
<hibernate-mapping
	package="cn.fuego.smart.home.domain">
	<class name="Building" table="building">

	    <id name="buildingID" column="BUILDING_ID" >
	     <generator class="identity"/> 
		</id>	    
	     <property name="companyID" column="COMPANY_ID" ></property>
	     <property name="name" column="NAME" ></property>
	     <property name="desp" column="DESP" ></property>
	     <property name="addr" column="ADDR" ></property>
	     <property name="picPath" column="PIC_PATH" ></property>

	</class>
</hibernate-mapping>