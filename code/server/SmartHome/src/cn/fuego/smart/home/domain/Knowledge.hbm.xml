<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
	
<hibernate-mapping
	package="cn.fuego.smart.home.domain">
	<class name="Knowledge" table="knowledge">

	    <id name="knowledgeID" column="KNOWLEDGE_ID" >
	       <generator class="identity"/> 
		</id>
		
		 <property name="title" column="TITLE"></property>
		 <property name="content"  >
		    <column name="CONTENT" sql-type="text" ></column>
		 </property>
		 <property name="knowledgeType" column="KNOWLEDGE_TYPE"></property>
		 <property name="knowledgeKind" column="KNOWLEDGE_KIND"></property>
	 
	</class>
 
</hibernate-mapping>