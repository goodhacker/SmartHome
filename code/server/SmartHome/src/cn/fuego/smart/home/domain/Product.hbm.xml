<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
	
<hibernate-mapping
	package="cn.fuego.smart.home.domain">
	<class name="Product" table="product">

	    <id name="productID" column="PRODUCT_ID" >
	       <generator class="identity"/> 
		</id>
		
		 <property name="name" column="NAME"></property>
		 <property name="desp" column="DESP"></property>
		 <property name="price" column="PRICE"></property>
		 <property name="picLabel" column="PIC_LABEL"></property>
		 <property name="picDetail1" column="PIC_DETAIL1"></property>
		 <property name="picDetail2" column="PIC_DETAIL2"></property>
		 <property name="picDetail3" column="PIC_DETAIL3"></property>
		 <property name="type" column="TYPE"></property>
		 
	</class>
 
</hibernate-mapping>