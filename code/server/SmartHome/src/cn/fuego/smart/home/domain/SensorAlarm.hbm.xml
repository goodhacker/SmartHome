<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
	
<hibernate-mapping
	package="cn.fuego.smart.home.domain">
	<class name="Sensor" table="sensor">

	    <id name="id" column="ID" >
	       <generator class="increment"/> 
		</id>
		
		 <property name="concentratorID" column="CONCENTRATOR_ID"></property>
		 <property name="sensorID" column="SENSOR_ID"></property>
		 <property name="channelID" column="CHANNEL_ID"></property>
		 <property name="alarmStatus" column="STATUS"></property>
		 <property name="alarmValue" column="ALARM_VALUE"></property>
		 <property name="alarmTime" column="ALARM_TIME"></property>
		 
	</class>
</hibernate-mapping>